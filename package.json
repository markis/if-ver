{
  "name": "if-ver",
  "version": "1.1.0",
  "description": "simple if-version check for node",
  "main": "index.js",
  "engines": {
    "node": ">=0.6"
  },
  "bin": {
    "if-ver": "index.js"
  },
  "files": [
    "index.js",
    "LICENSE.md",
    "package.json",
    "README.md",
    "usage.txt"
  ],
  "scripts": {
    "preformat": "prettier --write **.js",
    "format": "eslint --fix **.js",
    "prelint": "prettier --check **.js",
    "lint": "eslint **.js",
    "test": "node test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/markis/if-ver.git"
  },
  "keywords": [
    "if-version",
    "version-check",
    "if-version-check",
    "if-node-version"
  ],
  "author": "Markis Taylor <m@rkis.cc>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markis/if-ver/issues"
  },
  "homepage": "https://github.com/markis/if-ver#readme",
  "devDependencies": {
    "eslint": "^8.5.0",
    "prettier": "^2.5.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": false,
      "commonjs": true,
      "es6": false,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": ["error", "only-multiline"],
      "comma-style":["error", "last"],
      "quotes": ["error", "double", {"avoidEscape": true}],
      "semi": "error"
    }
  }
}
